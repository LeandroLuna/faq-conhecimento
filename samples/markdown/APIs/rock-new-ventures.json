    "/startup": {
      "post": {
        "tags": [
          "startup"
        ],
        "summary": "Adiciona uma nova startup",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Objeto de startup",
            "required": true,
