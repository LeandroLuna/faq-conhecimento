  "definitions": {
    "Startup": {
      "type": "object",
      "required": [
        "nome",
        "ano_formatura",
        "curso",
        "email",
        "telefone",
        "nome_startup",
        "segmento_id",
        "url_pitch",
        "descricao"
      ],
      "properties": {
        "nome": {
          "type": "string",
          "example": "Nome completo",
          "maximum": 250
        },
        "ano_formatura": {
          "type": "integer",
          "example": 2020
        },
        "curso": {
          "type": "string",
          "example": "Curso de formação",
          "maximum": 250
        },
        "email": {
          "type": "string",
          "example": "email@fiap.com.br"
        },
        "telefone": {
          "type": "string",
          "example": "(00) 00000-0000",
          "maximum": 14
        },
        "nome_startup": {
          "type": "string",
          "example": "Nome da startup",
          "maximum": 250
        },
        "segmento_id": {
          "type": "integer"
        },
        "programa_aceleracao": {
          "type": "string",
          "example": "Nome do programa de aceleração",
          "maximum": 250
        },
        "cnpj": {
          "type": "string",
          "example": "00.000.000/0000-00",
          "maximum": 18
        },
        "site": {
          "type": "string",
          "example": "https://urlsite.com"
        },
        "url_pitch": {
          "type": "string",
          "example": "https://urlpitch.com"
        },
        "professor": {
          "type": "string",
          "example": "Nome do professor",
          "maximum": 250
        },
        "descricao": {
          "type": "string",
          "example": "Descrição do projeto",
          "maximum": 500
        }
      }
    },
    "Segmentos": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "nome": {
          "type": "string",
          "example": "Segmento"
        },
        "ativo": {
          "type": "integer",
          "example": 1
        }
      }
    },
    "Contato": {
      "type": "object",
      "required": [
        "nome",
        "email",
        "assunto",
        "mensagem"
      ],
      "properties": {
        "nome": {
          "type": "string",
          "example": "Nome completo",
          "maximum": 250
        },
        "email": {
          "type": "string",
          "example": "email@fiap.com.br"
        },
        "assunto": {
          "type": "string",
          "example": "Assunto da mensagem",
          "enum": [
            "Período de inscrição FIAP Amplifier",
            "Dúvidas",
            "Etapas do processo de seleção",
            "Resultado do processo seletivo"
          ]
        },
        "mensagem": {
          "type": "string",
          "example": "Mensagem",
          "maximum": 500
        }
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "Authorization": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization"
    }
  },
  "security": [
    {
      "Authorization": []
    }
  ]
